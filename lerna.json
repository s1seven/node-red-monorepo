{
  "npmClient": "npm",
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "ignoreChanges": ["**/package-lock.json", "*.md", "**/*.spec.ts"],
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  }
}
