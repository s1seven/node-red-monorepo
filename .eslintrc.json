{
  "extends": [
    "prettier",
    "plugin:prettier/recommended",
    "plugin:sonarjs/recommended"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "indent": ["error", 2]
  },
  "plugins": [
    "@typescript-eslint/eslint-plugin",
    "unused-imports",
    "import",
    "prettier",
    "simple-import-sort",
    "sonarjs"
  ],
  "ignorePatterns": ["*.min.js"]
}
